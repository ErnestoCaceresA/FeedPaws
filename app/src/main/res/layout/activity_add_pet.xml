<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FBED2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="25dp">

            <TextView
                android:id="@+id/rdmTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Registro de mascota"
                android:textColor="#000000"
                android:textSize="34sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="50dp" >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/RPNameET"
                    style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:textSize="24sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/RPAgeET"
                    style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="Edad (AÃ±os)"
                    android:inputType="textPersonName"
                    android:textSize="24sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="220dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/RPRaceET"
                    style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="Raza"
                    android:inputType="textPersonName"
                    android:textSize="24sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="300dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/RPWeightET"
                    style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="Peso (Kg)"
                    android:inputType="textPersonName"
                    android:textSize="24sp" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/RegPetButton"
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="380dp"
                android:backgroundTint="#4BAF50"
                android:text="Registrar"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/CanRPButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="440dp"
                android:backgroundTint="#F44336"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>